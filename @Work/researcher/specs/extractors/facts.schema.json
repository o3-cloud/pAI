{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "FactList",
  "type": "object",
  "description": "A list of factual statements and their sources.",
  "properties": {
    "facts": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "fact": {
            "type": "string",
            "description": "A statement of fact."
          },
          "source": {
            "type": "string",
            "description": "The source or reference for the fact."
          }
        },
        "required": ["fact"]
      }
    }
  },
  "required": ["facts"]
}