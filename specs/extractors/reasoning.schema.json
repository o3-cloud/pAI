{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ReasoningList",
  "type": "object",
  "description": "A list of reasons or justifications extracted from a text.",
  "properties": {
    "reasons": {
      "type": "array",
      "items": {
        "type": "string",
        "description": "A single reason or justification."
      }
    }
  },
  "required": ["reasons"]
}
