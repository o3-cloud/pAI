{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ImprovementSuggestions",
  "type": "object",
  "description": "A list of suggestions for improvements or recommendations extracted from a text.",
  "properties": {
    "suggestions": {
      "type": "array",
      "items": {
        "type": "string",
        "description": "A suggested improvement or recommendation."
      }
    }
  },
  "required": ["suggestions"]
}
