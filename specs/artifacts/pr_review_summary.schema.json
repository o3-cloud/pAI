{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "PRReviewSummary",
  "type": "object",
  "properties": {
    "summary": { "type": "string", "description": "Summary of the pull request review." },
    "issues_flagged": { "type": "array", "items": { "type": "string" }, "description": "List of issues identified." },
    "reviewers_suggested": { "type": "array", "items": { "type": "string" }, "description": "List of suggested reviewers." }
  },
  "required": ["summary"]
}
